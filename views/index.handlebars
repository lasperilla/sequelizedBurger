<a  name="burgers"></a>
    <div class="content-section-a">

        <div class="container">
            <div class="row">
                <div class="col-lg-5 col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Burgers that are not devoured!</h2>
                    <div id="not-devoured">
                      <ul>
                        {{#each burgers}}
                          {{#unless this.devoured}}
                            <li>
                              {{this.burger_name}}

                              <form action="/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="devoured" value="true">
                                <button type="submit">devour</button>
                              </form>
                            </li>
                          {{/unless}}
                        {{/each}}
                      </ul>
                    </div>
                </div>
                <div class="col-lg-5 col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Burgers that have been devoured!</h2>
                    <div id="devoured">
                      <ul>
                        {{#each burgers}}
                          {{#if this.devoured}}
                            <li>
                              {{this.burger_name}}
                            </li>
                          {{/if}}
                        {{/each}}
                      </ul>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.content-section-a -->

    <div class="content-section-b">

        <div class="container">

            <div class="row">
                <div class="col-lg-8 panel panel-default">
                    <div class ="panel-heading"
                      <h2 class="section-heading">Add a Burger</h2>
                    </div>
                    <div class="panel-body">
                      <form class="create-update-form" action="/" method="POST">

                        <div class="form-group">
                          <label for="ca">Burger Name:</label>
                          <input type="text" id="ca" name="burger_name">
                        </div>

                        <button type="submit">Add Burger</button>
                        <p>Enter the name of the burger you want to create and hit the "Add Burger" button.</p>
                      </form>
                    </div>
                  </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.content-section-b -->

