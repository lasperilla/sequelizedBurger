<div class ="jumbotron">
  <h1>Eat Da Burger!</h1>

  <div class="row match-my-cols">
    <div class="col-md-6" id="not-devoured">
      <h2>Burgers that are not devoured!</h2>

      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">devour</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6" id="devoured">
      <h2>Burgers that are devoured!</h2>

      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <h2>Add a Burger</h2>
  <form class="create-update-form" action="/" method="POST">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="burger_name">
    </div>

    <button type="submit">Add Burger</button>
    <p>Enter the name of the burger you want to create and hit the "Add Burger" button.</p>
  </form>
</div>